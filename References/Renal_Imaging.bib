  keywords = {blood oxygenation,Body Temperature,Fetal Blood,hematocrit,Humans,Infant; Newborn,longitudinal relaxation time,Magnetic Resonance Imaging,neonate,Oxygen,Signal Processing; Computer-Assisted,transverse relaxation time,umbilical cord blood},
