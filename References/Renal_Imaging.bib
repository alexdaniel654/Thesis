  eprinttype = {pmid},
  keywords = {Adult,Body Water,Brain Mapping,Brain Neoplasms,Cerebral Infarction,Electroencephalography,Epilepsies; Partial,Female,Humans,Magnetic Resonance Imaging,Male,Middle Aged,Neocortex,Teratoma},
