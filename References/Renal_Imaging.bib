@article{canstein_3d_2008,
  title = {{{3D MR}} Flow Analysis in Realistic Rapid-Prototyping Model Systems of the Thoracic Aorta: {{Comparison}} with in Vivo Data and Computational Fluid Dynamics in Identical Vessel Geometries},
  shorttitle = {{{3D MR}} Flow Analysis in Realistic Rapid-Prototyping Model Systems of the Thoracic Aorta},
