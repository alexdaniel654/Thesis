  shorttitle = {Quantification of {{Liver Fibrosis}} at {{T1}} and {{T2 Mapping}} with {{Extracellular Volume Fraction MRI}}},
  author = {Luetkens, Julian A. and Klein, Sabine and Tr\"aber, Frank and Schmeel, Frederic C. and Sprinkart, Alois M. and Kuetting, Daniel L. R. and Block, Wolfgang and Uschner, Frank E. and Schierwagen, Robert and Hittatiya, Kanishka and Kristiansen, Glen and Gieseke, Juergen and Schild, Hans H. and Trebicka, Jonel and Kukuk, Guido M.},
