@article{zhao_assessment_2014,
  title = {Assessment of Renal Fibrosis in Chronic Kidney Disease Using Diffusion-Weighted {{MRI}}},
  author = {Zhao, J. and Wang, Z. J. and Liu, M. and Zhu, J. and Zhang, X. and Zhang, T. and Li, S. and Li, Y.},
  date = {2014-11},
  journaltitle = {Clinical Radiology},
  shortjournal = {Clinical Radiology},
  volume = {69},
