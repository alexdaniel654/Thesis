@article{moll_multiple_2011,
  title = {Multiple Sclerosis Normal-Appearing White Matter: {{Pathology}}\textendash Imaging Correlations},
  shorttitle = {Multiple Sclerosis Normal-Appearing White Matter},
  author = {Moll, Natalia M. and Rietsch, Anna M. and Thomas, Smitha and Ransohoff, Amy J. and Lee, Jar-Chi and Fox, Robert and Chang, Ansi and Ransohoff, Richard M. and Fisher, Elizabeth},
