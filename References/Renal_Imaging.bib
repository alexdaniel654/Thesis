@article{miller_diffusion_2011,
  title = {Diffusion Imaging of Whole, Post-Mortem Human Brains on a Clinical {{MRI}} Scanner},
  author = {Miller, Karla L. and Stagg, Charlotte J. and Douaud, Gwena\"elle and Jbabdi, Saad and Smith, Stephen M. and Behrens, Timothy E. J. and Jenkinson, Mark and Chance, Steven A. and Esiri, Margaret M. and Voets, Natalie L. and Jenkinson, Ned and Aziz, Tipu Z. and Turner, Martin R. and Johansen-Berg, Heidi and McNab, Jennifer A.},
