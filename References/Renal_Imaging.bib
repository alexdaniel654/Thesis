@article{liney_quantitative_2015,
  title = {Quantitative Evaluation of Diffusion-Weighted Imaging Techniques for the Purposes of Radiotherapy Planning in the Prostate},
  author = {Liney, G P and Holloway, L and Al Harthi, T M and Sidhom, M and Moses, D and Juresic, E and Rai, R and Manton, D J},
