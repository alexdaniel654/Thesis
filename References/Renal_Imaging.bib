@article{franke_magnetic_2017,
  ids = {franke_magnetic_2017-1},
  title = {Magnetic Resonance {{T2}} Mapping and Diffusion-Weighted Imaging for Early Detection of Cystogenesis and Response to Therapy in a Mouse Model of Polycystic Kidney Disease},
  author = {Franke, Mareike and Bae\ss ler, Bettina and Vechtel, Jan and Dafinger, Claudia and H\"ohne, Martin and Borgal, Lori and G\"obel, Heike and Koerber, Friederike and Maintz, David and Benzing, Thomas and Schermer, Bernhard and Persigehl, Thorsten},
