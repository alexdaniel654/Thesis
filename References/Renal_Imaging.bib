@article{ries_diffusion_2001,
  title = {Diffusion Tensor {{MRI}} of the Human Kidney},
  author = {Ries, Mario and Jones, Richard A. and Basseau, Fabrice and Moonen, Chrit T.W. and Grenier, Nicolas},
