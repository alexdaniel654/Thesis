@article{li_measuring_2015,
  ids = {li_measuring_2015-1},
  title = {Measuring Renal Tissue Relaxation Times at 7 {{T}}},
  author = {Li, Xiufeng and Bolan, Patrick J. and Ugurbil, Kamil and Metzger, Gregory J.},
  date = {2015},
  journaltitle = {NMR in Biomedicine},
  volume = {28},
  pages = {63--69},
  issn = {1099-1492},
  doi = {10.1002/nbm.3195},
  abstract = {As developments in RF coils and RF management strategies make performing ultra-high-field renal imaging feasible, understanding the relaxation times of the tissue becomes increasingly important for tissue characterization, sequence optimization and quantitative functional renal imaging, such as renal perfusion imaging using arterial spin labeling. By using a magnetization-prepared single-breath-hold fast spin echo imaging method, human renal T1 and T2 imaging studies were successfully performed at 7 T with 11 healthy volunteers (eight males, 45 {$\pm$} 17 years, and three females, 29 {$\pm$} 7 years, mean {$\pm$} standard deviation, S.D.) while addressing challenges of B1+ inhomogeneity and short-term specific absorption rate limits. At 7 T, measured renal T1 values for the renal cortex and medulla (mean {$\pm$} S.D.) from five healthy volunteers who participated in both 3 T and two-session 7 T studies were 1661 {$\pm$} 68 ms and 2094 {$\pm$} 67 ms, and T2 values were 108 {$\pm$} 7 ms and 126 {$\pm$} 6 ms. For comparison, similar measurements were made at 3 T, where renal cortex and medulla T1 values of 1261 {$\pm$} 86 ms and 1676 {$\pm$} 94 ms and T2 values of 121 {$\pm$} 5 ms and 138 {$\pm$} 7 ms were obtained. Measurements at 3 T and 7 T were significantly different for both T1 and T2 values in both renal tissues. Reproducibility studies at 7 T demonstrated that T1 and T2 estimations were robust, with group mean percentage differences of less than 4\%. Copyright \textcopyright{} 2014 John Wiley \& Sons, Ltd.},
  keywords = {7 T,kidneys,longitudinal relaxation time (T1),renal relaxation time,transverse relaxation time (T2),ultra-high field (UHF)},
  langid = {english},
  number = {1}
}

