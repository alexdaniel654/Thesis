@article{lazari_can_2021,
  title = {Can {{MRI}} Measure Myelin? {{Systematic}} Review, Qualitative Assessment, and Meta-Analysis of Studies Validating Microstructural Imaging with Myelin Histology},
  shorttitle = {Can {{MRI}} Measure Myelin?},
  author = {Lazari, Alberto and Lipp, Ilona},
