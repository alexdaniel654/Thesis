@article{vymazal_t1_1999,
  title = {T1 and {{T2}} in the {{Brain}} of {{Healthy Subjects}}, {{Patients}} with {{Parkinson Disease}}, and {{Patients}} with {{Multiple System Atrophy}}: {{Relation}} to {{Iron Content}}},
