@article{norddin_microscopic_2015,
  title = {Microscopic Diffusion Properties of Fixed Breast Tissue: {{Preliminary}} Findings},
  shorttitle = {Microscopic Diffusion Properties of Fixed Breast Tissue},
  author = {Norddin, Narina and Power, Carl and Watson, Geoffrey and Cowin, Gary and Kurniawan, Nyoman D. and Gluch, Laurence and Bourne, Roger M.},
