  keywords = {biomedical MRI,convolutional neural nets,convolutional neural networks-based SR methods,critical imaging parameter,deep network structures,Feature extraction,fixed shallow layer network,Fixed skip connection,fixed skip connection based SR algorithm,FSCWRN SR algorithm,global residual learning,image reconstruction,Image reconstruction,image resolution,learning (artificial intelligence),magnetic resonance imaging,Magnetic resonance imaging,medical image processing,MR image superresolution,network training,Power capacitors,progressive wide residual network,real MR image databases,reconstruction performance,shallow network based local residual learning,simulated MR image database,spatial resolution,Spatial resolution,subsequent networks,Super-resolution,Training,transmission capability,Wide residual networks},
  number = {3}
}

