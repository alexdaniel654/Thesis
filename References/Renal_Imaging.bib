  issn = {1522-2594},
  doi = {10.1002/mrm.22778},
  abstract = {Diffusion tensor microimaging was used to investigate the water diffusion properties of formalin-fixed prostate tissue at spatial resolution approaching the cellular scale. Diffusion tensor microimaging was performed at 16.4 T with 40 {$\mu$}m isotropic voxels. Diffusion tensor microimaging clearly demonstrated distinct microscopic diffusion environments and tissue architecture consistent with that seen on light microscopy of the same tissue. The most restricted diffusion environment is the secretory epithelial cell layer (voxel bulk mean diffusivity, D = 0.4 {$\pm$} 0.1 \texttimes{} 10-3 mm2/sec). Diffusion in the fibromuscular stromal matrix is relatively less restricted (D = 0.7 {$\pm$} 0.1 \texttimes{} 10-3 mm2/sec). In tumor tissue (Gleason pattern 4+4) distinct glandular and ductal structures are absent in the diffusion-weighted images and diffusivity is low (D = 0.5 {$\pm$} 0.1 \texttimes{} 10-3 mm2/sec). Distinct stromal and epithelial diffusion compartments are the most likely origin of biexponential diffusion decay observed in vivo. Magn Reson Med, 2011. \textcopyright{} 2011 Wiley-Liss, Inc.},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/mrm.22778},
  keywords = {diffusion,DTI,microimaging,prostate},
  langid = {english},
  number = {1}
}

