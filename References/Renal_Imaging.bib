@article{kellman_t2-prepared_2007,
  title = {T2-Prepared {{SSFP}} Improves Diagnostic Confidence in Edema Imaging in Acute Myocardial Infarction Compared to Turbo Spin Echo},
  author = {Kellman, Peter and Aletras, Anthony H. and Mancini, Christine and McVeigh, Elliot R. and Arai, Andrew E.},
